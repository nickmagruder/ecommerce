#!/bin/bash
# start-nginx-static: Script to start Nginx for static file serving

# Exit on error
set -e

# If the PORT environment variable is not set, use 5000
PORT=${PORT:-5000}
# Make sure we have the build directory
if [ ! -d build ]; then
  echo "Error: build directory not found!"
  exit 1
fi

# Start Nginx
echo "Starting Nginx on port $PORT..."
exec nginx -p . -c config/nginx.conf -g "daemon off; error_log stderr; access_log /dev/stdout;"
